@inherits LayoutComponentBase
@inject NavigationManager NM


<div class="container-fluid">

    <div class="row bg-intestazione">
        <header class="col-12 py-3">
            <Intestazione />
        </header>
        <nav class="navbar navbar-expand-lg col-md-3 p-3">
            <Menu />
        </nav>
    </div>

    <div class="row">
        <main class="col-md-9 p-3">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent Context="ex">
                    <p>Errore: @ex.Message</p>
                </ErrorContent>
            </ErrorBoundary>
        </main>

        <aside class="col-md-3 p-3">
            <LinkUtili Parametri="@Correlati.LinkUtili[Regex.Match(NM.Uri, @"\/([^\/].*)$").Value]" /> @*TODO: Dictionary *@
        </aside>
    </div>

    <div class="row">
        <footer class="col-12 p-3 text-center footer">
            <Footer />
        </footer>
    </div>

</div>